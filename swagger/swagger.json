  "paths" : {
    "/products" : {
      "summary" : "Endpoints related to the products of the system.",
      "get" : {
        "tags" : [ "Products" ],
        "summary" : "Returns the list of products.",
        "description" : "Returns the list of products, sorted by newest (by default).",
        "operationId" : "findProducts",
        "parameters" : [ {
          "name" : "sortBy",
          "in" : "query",
          "description" : "Sort the result by the given parameter.",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "enum" : [ "releaseDate", "name" ]
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "The list of products.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Product" : {
        "required" : [ "id", "imageUrl", "name", "price", "summary" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string",
            "format" : "uuid",
            "example" : "d290f1ee-6c54-4b01-90e6-d701748f0851"
          },
          "name" : {
            "type" : "string",
            "example" : "ABBA's New LP"
          },
          "summary" : {
            "type" : "string",
            "example" : "The long awaited new record from the classic Swedish pop group ABBA!!!!"
          },
          "price" : {
            "type" : "number",
            "format" : "float",
            "example" : 13.99
          },
          "imageUrl" : {
            "type" : "string",
            "example" : "https://media1.jpc.de/image/w600/front/0/0600753337776.jpg"
          }
        }
      }
    }
  }
