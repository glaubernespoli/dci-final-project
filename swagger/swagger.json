    "url" : "https://virtserver.swaggerhub.com/glaubernespoli/DCI-SellYourRecords/1.0.0",
    "description" : "SwaggerHub API Auto Mocking"
  } ],
  "tags" : [ {
    "name" : "Records",
    "description" : "Calls related to the records."
  }, {
    "name" : "admins",
    "description" : "Secured Admin-only calls."
  }, {
    "name" : "User Settings",
    "description" : "User settings calls"
  } ],
  "paths" : {
    "/record" : {
      "summary" : "Endpoints related to the records of the system.",
      "get" : {
        "tags" : [ "Records" ],
        "summary" : "Returns the list of records.",
        "description" : "Returns the list of records, sorted by newest (by default).",
        "operationId" : "findRecords",
        "parameters" : [ {
          "name" : "sortBy",
          "in" : "query",
          "description" : "Sort the result by the given parameter.",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "enum" : [ "releaseDate", "name" ]
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "The list of records.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Record"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/record/hot" : {
      "get" : {
        "tags" : [ "Records" ],
        "summary" : "Returns the hot records/deals.",
        "operationId" : "findHotRecords",
        "responses" : {
          "200" : {
            "description" : "The list of hot records.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "maxItems" : 5,
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Record"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/record/s" : {
      "summary" : "Record's search endpoint.",
      "get" : {
        "tags" : [ "Records" ],
        "summary" : "Returns a list of records based on the search.",
        "operationId" : "findRecordsBy",
        "parameters" : [ {
          "name" : "q",
          "in" : "query",
          "description" : "Makes a query by the given argument, matching against the record's name or group.",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "example" : "ABBA"
          }
        }, {
          "name" : "format",
          "in" : "query",
          "description" : "Makes a query by the given format.",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "$ref" : "#/components/schemas/Format"
          }
        }, {
          "name" : "style",
          "in" : "query",
          "description" : "Makes a query by the given style.",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "$ref" : "#/components/schemas/Style"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "The list of records, based on the search.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Record"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/record/{id}" : {
      "get" : {
        "tags" : [ "Records" ],
        "summary" : "Returns the information of an specific item.",
        "operationId" : "findRecordByID",
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "description" : "The record's ID.",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Returns the information of a specific record.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Record"
                }
              }
            }
          },
          "404" : {
            "description" : "Invalid record ID."
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Record" : {
        "required" : [ "id", "imageUrl", "name", "price", "summary" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string",
            "format" : "uuid",
            "example" : "d290f1ee-6c54-4b01-90e6-d701748f0851"
          },
          "name" : {
            "type" : "string",
            "description" : "The name of the record.",
            "example" : "ABBA's New LP"
          },
          "group" : {
            "type" : "string",
            "description" : "The name of the group.",
            "example" : "ABBA"
          },
          "summary" : {
            "type" : "string",
            "description" : "A brief summary about this record.",
            "example" : "The long awaited new record from the classic Swedish pop group ABBA!!!!"
          },
          "description" : {
            "type" : "string",
            "description" : "A long description about this record."
          },
          "price" : {
            "type" : "number",
            "format" : "float",
            "example" : 13.99
          },
          "imageUrl" : {
            "type" : "string",
            "example" : "https://media1.jpc.de/image/w600/front/0/0600753337776.jpg"
          },
          "format" : {
            "$ref" : "#/components/schemas/Format"
          },
          "style" : {
            "$ref" : "#/components/schemas/Style"
          }
        }
      },
      "Format" : {
        "type" : "string",
        "description" : "The possible record's formats.",
        "example" : "LP",
        "enum" : [ "LP", "7\"", "CD", "Tape" ]
      },
      "Style" : {
        "type" : "string",
        "description" : "The possible record's styles.",
        "example" : "Rock",
        "enum" : [ "Rock", "Blues", "Punk", "Pop", "Jazz" ]
      }
    }
  }
}